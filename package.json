{
  "name": "timed-reminder",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "packageManager": "pnpm@10.0.0",
  "scripts": {
    "dev": "NODE_ENV=development vite",
    "clean": "rimraf dist",
    "build": "pnpm run type:check && NODE_ENV=production vite build",
    "type:check": "tsc --noEmit",
    "test": "vitest run --mode development --browser.headless",
    "test:staged": "vitest --run --mode development --browser.headless related",
    "test:watch": "vitest --mode development",
    "test:coverage": "pnpm run test --coverage",
    "lint:staged": "eslint --format codeframe",
    "lint": "pnpm run lint:staged -- '**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "pnpm run lint -- --fix",
    "prettier:check": "prettier --check '**/*.{js,jsx,ts,tsx,css,scss,json}'",
    "preview": "vite preview",
    "prepare": "husky"
  },
  "author": "zadzbw",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zadzbw/timed-reminder.git"
  },
  "bugs": {
    "url": "https://github.com/zadzbw/timed-reminder/issues"
  },
  "homepage": "https://github.com/zadzbw/timed-reminder#readme",
  "engines": {
    "node": ">= 22"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "clsx": "^2.1.1",
    "daisyui": "^5.0.46",
    "es-toolkit": "^1.39.9",
    "jotai": "^2.12.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@eslint-react/eslint-plugin": "^1.52.3",
    "@eslint/js": "^9.31.0",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.31.0",
    "eslint-formatter-codeframe": "^7.32.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "playwright": "^1.54.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "sass-embedded": "^1.89.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^7.0.5",
    "vitest": "^3.2.4",
    "vitest-browser-react": "^1.0.1"
  }
}
